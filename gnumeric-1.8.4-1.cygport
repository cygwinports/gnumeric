inherit gnome2

DESCRIPTION="GNOME Spreadsheet"
HOMEPAGE="http://www.gnome.org/projects/gnumeric/"

PATCH_URI="
	1.8.3-not-win32.patch
	1.8.3-libgda30.patch
	1.8.3-pkgconfig.patch
"

PKG_NAMES="${PN} ${PN}-devel"
PKG_HINTS="setup devel"
gnumeric_CONTENTS="etc/ usr/bin/ usr/lib/${PN}/${PV}/plugins/ usr/share/"
gnumeric_devel_CONTENTS="usr/include/ usr/lib/${PN}/${PV}/include/
                         usr/lib/libspreadsheet.* usr/lib/pkgconfig/"

DIFF_EXCLUDES="gnumeric-config.h.in"

CYGCONF_ARGS="
	--with-gda
	--with-gnome
	--with-paradox
	--with-perl
	--with-psiconv
	--with-python
	--with-zlib
"
